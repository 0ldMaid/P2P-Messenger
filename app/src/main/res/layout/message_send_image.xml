<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/image_message_body"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/placeholder"
        android:padding="8dp"
        android:text="ddddd"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_status"
        android:text="33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/text_message_time"
        app:layout_constraintRight_toLeftOf="@+id/image_message_body" />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="11:40"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_message_body"
        app:layout_constraintRight_toLeftOf="@+id/image_message_body" />

</androidx.constraintlayout.widget.ConstraintLayout>